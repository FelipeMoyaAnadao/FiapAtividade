@model Fiap.Atividade.ViewModel.SistemaAlarmeCreateViewModel
<h1>SistemaAlarme</h1>
<h4>Novo</h4>
<hr />
<div class="row">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="SistemaAlarme">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" type="datetime" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-select" asp-items="@Model.Tipo"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>